<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="apple-touch-icon" href="logo.png">
    <link rel="shortcut icon" type="image/x-icon" href="logo.png">

    <link rel="stylesheet" href="style.css" class="">
    <title><%= process.env.title %></title>
</head>
<body class="bg-slate-200">
    <%- include('components/header') %>
    <section class="text-gray-600 body-font">
      <div class="container px-5 py-10 mx-auto">
        <div class="flex flex-wrap -m-4">
          <% quotes.forEach(quote=>{ %>
          <div class="lg:w-1/3 lg:mb-0 mb-6 p-4">
            <div class="h-full text-center">
              <div class="w-20 h-20 mb-8 object-cover object-center rounded-full inline-block border-2 border-gray-800 bg-gray-100">
                <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="" viewBox="0 0 24 24">
                <path d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
                </svg>
              </div>
              <p class="leading-relaxed"><%= quote.name %></p>
              <span class="inline-block h-1 w-10 rounded bg-indigo-500 mt-3 mb-1"></span>
              <h2 class="text-gray-900 font-medium title-font tracking-wider text-sm"><%= quote.author.name %></h2>
              <p class="text-gray-500"><%= quote.author.about %></p>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </section>
    <%- include('components/footer') %>
</body>
</html>

